{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Parteiparolen",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string"
    },
    "totalSeats": {
      "type": "number",
      "title": "Sitze insgesamt"
    },
    "parties": {
      "type": "array",
      "title": "Parteien",
      "items": {
        "type": "object",
        "title": "Partei",
        "properties": {
          "name": {
            "type": "string",
            "title": "Parteiname"
          },
          "seats": {
            "type": "number",
            "title": "Anzahl Sitze"
          },
          "color": {
            "type": "string",
            "Q:type": "color",
            "title": "Parteifarbe",
            "Q:options": {
              "compact": true,
              "availabilityChecks": [
                {
                  "type": "UserHasRole",
                  "role": "expert-coalition-calculation"
                }
              ]
            }
          }
        }
      }
    },
    "possibleCoalitions": {
      "type": "array",
      "title": "MÃ¶gliche Koalitionen",
      "items": {
        "title": "Koalition",
        "type": "array",
        "items": {
          "type": "string",
          "title": "Partei",
          "Q:options": {
            "dynamicEnum": {
              "type": "ToolEndpoint",
              "withData": true,
              "endpoint": "dynamic-enum/availableParties"
            }
          }
        }
      }
    },
    "options": {
      "title": "Koalitionsoptionen",
      "type": "object",
      "properties": {
        "hideTitle": {
          "type": "boolean",
          "default": false,
          "Q:deprecated": true,
          "Q:options": {
            "hideInEditor": false
          }
        }
      }
    }
  },
  "required": [
    "title",
    "data"
  ]
}
