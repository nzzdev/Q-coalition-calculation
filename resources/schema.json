{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Koalitionsrechner",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Titel bringt die Kernaussage des Koalitionsrechners auf den Punkt&#46;"
      }
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string"
    },
    "totalSeats": {
      "title": "Sitze im Parlament insgesamt",
      "type": "number"
    },
    "parties": {
      "title": "Parteien",
      "type": "array",
      "Q:options": {
        "expandable": {
          "itemLabelProperty": "name"
        },
        "availabilityChecks": [
          {
            "type": "ItemHasId",
            "config": {
              "unavailableMessage": "Bitte speichere deinen Titel um fortzufahren."
            }
          }
        ]
      },
      "items": { "$ref": "#/definitions/party" }
    },
    "possibleCoalitions": {
      "title": "Mögliche Koalitionen",
      "type": "array",
      "Q:options": {
        "expandable": {
          "itemLabelProperty": "name"
        },
        "availabilityChecks": [
          {
            "type": "ItemHasId"
          }
        ]
      },
      "items": {
        "title": "Koalition",
        "type": "array",
        "items": {
          "title": "Partei zu Koalition",
          "type": "object",
          "properties": {
            "id": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "Q:options": {
                "dynamicSchema": {
                  "type": "ToolEndpoint",
                  "config": {
                    "endpoint": "dynamic-schema/availableParties",
                    "fields": ["parties"]
                  }
                }
              }
            }
          }
        }
      }
    },
    "sources": {
      "title": "Quelle(n)",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Quelle",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "Q:options": {
              "placeholder": "Direktlink zur Quelle, http://&#46;&#46;&#46;"
            },
            "properties": {
              "url": {
                "title": "Url",
                "type": "string"
              },
              "isValid": {
                "type": "boolean"
              }
            }
          }
        },
        "required": ["text"]
      }
    },

    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    }
  },
  "definitions": {
    "party": {
      "title": "Partei",
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/partyId" },
        "name": {
          "title": "Parteiname oder Kürzel",
          "type": "string"
        },
        "seats": {
          "title": "Anzahl Sitze",
          "type": "number"
        },
        "color": {
          "title": "Parteifarbe",
          "type": "object",
          "Q:options": {
            "compact": true,
            "availabilityChecks": [
              {
                "type": "UserHasRole",
                "config": {
                  "role": "expert-coalition-calculation"
                }
              }
            ]
          },
          "properties": {
            "colorCode": {
              "title": "Farbcode",
              "type": "string",
              "Q:type": "color"
            },
            "classAttribute": {
              "title": "CSS-Klassenname",
              "type": "string",
              "Q:options": {
                "placeholder": "s-viz-color-party-&#46;&#46;&#46;"
              }
            }
          }
        }
      }
    },
    "partyId": {
      "type": "string",
      "title": "ID",
      "Q:default": "generatedId",
      "Q:options": {
        "hideInEditor": true
      }
    }
  },
  "required": ["title"]
}
