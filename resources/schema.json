{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Parteiparolen",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string"
    },
    "sources": {
      "type": "array",
      "title": "Quellen",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "label": {
            "title": "Label",
            "type": "string"
          },
          "url": {
            "title": "URL",
            "Q:type": "url",
            "type": "string"
          }
        }
      }
    },
    "data": {
      "type": "object",
      "title": "Daten",
      "properties": {
        "yes": {
          "type": "object",
          "title": "Ja Parole",
          "properties": {
            "parties": {
              "type": "array",
              "title": "Parteien",
              "items": {
                "type": "string",
                "title": "Partei"
              }
            },
            "organisations": {
              "type": "array",
              "title": "Organisationen",
              "items": {
                "type": "string",
                "title": "Organisation"
              }
            }
          }
        },
        "no": {
          "type": "object",
          "title": "Nein Parole",
          "properties": {
            "parties": {
              "type": "array",
              "title": "Parteien",
              "items": {
                "type": "string",
                "title": "Partei"
              }
            },
            "organisations": {
              "type": "array",
              "title": "Organisationen",
              "items": {
                "type": "string",
                "title": "Organisation"
              }
            }
          }
        },
        "undecided": {
          "type": "object",
          "title": "Stimmfreigabe",
          "properties": {
            "parties": {
              "type": "array",
              "title": "Parteien",
              "items": {
                "type": "string",
                "title": "Partei"
              }
            },
            "organisations": {
              "type": "array",
              "title": "Organisationen",
              "items": {
                "type": "string",
                "title": "Organisation"
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "title",
    "data"
  ]
}
